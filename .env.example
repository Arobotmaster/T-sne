# MOF数据t-SNE可视化应用 - 环境配置示例
# 复制此文件为 .env 并根据需要修改配置

# =============================================================================
# 应用基础配置
# =============================================================================
APP_NAME=MOF数据t-SNE可视化
APP_VERSION=1.0.0
DEBUG=true
ENVIRONMENT=development

# =============================================================================
# 数据库配置
# =============================================================================
# SQLite数据库（默认）
DATABASE_URL=sqlite:///./data/mof_viz.db

# PostgreSQL配置（如果使用PostgreSQL）
# DATABASE_URL=postgresql://username:password@localhost:5432/mof_viz

# =============================================================================
# Redis配置（用于缓存和会话）
# =============================================================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=
REDIS_DB=0

# =============================================================================
# 安全配置
# =============================================================================
SECRET_KEY=your-secret-key-change-this-in-production
ACCESS_TOKEN_EXPIRE_MINUTES=30
ALGORITHM=HS256

# =============================================================================
# 日志配置
# =============================================================================
LOG_LEVEL=INFO
LOG_FILE=logs/app.log
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s
LOG_DATE_FORMAT=%Y-%m-%d %H:%M:%S

# =============================================================================
# 文件上传配置
# =============================================================================
MAX_UPLOAD_SIZE=104857600  # 100MB (in bytes)
ALLOWED_EXTENSIONS=csv
UPLOAD_DIRECTORY=data/uploads
TEMP_DIRECTORY=temp

# =============================================================================
# CORS配置
# =============================================================================
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:8000,http://127.0.0.1:3000
ALLOWED_METHODS=GET,POST,PUT,DELETE,OPTIONS
ALLOWED_HEADERS=*

# =============================================================================
# API配置
# =============================================================================
API_V1_PREFIX=/api/v1
API_DOCS_URL=/docs
API_REDOC_URL=/redoc

# =============================================================================
# 处理配置
# =============================================================================
MAX_CONCURRENT_PROCESSES=4
PROCESSING_TIMEOUT=3600  # 1 hour (in seconds)
CLEANUP_INTERVAL_HOURS=24

# =============================================================================
# 可视化配置
# =============================================================================
DEFAULT_PLOT_WIDTH=1200
DEFAULT_PLOT_HEIGHT=800
DEFAULT_DPI=300
MAX_PLOT_SIZE=4000

# =============================================================================
# 导出配置
# =============================================================================
EXPORT_DIRECTORY=data/exports
SUPPORTED_EXPORT_FORMATS=png,svg,pdf
DEFAULT_EXPORT_FORMAT=png

# =============================================================================
# 监控配置
# =============================================================================
ENABLE_METRICS=true
METRICS_PORT=8090
HEALTH_CHECK_INTERVAL=30

# =============================================================================
# 开发环境特定配置
# =============================================================================
# 开发时设置为true以启用详细日志和调试信息
DEBUG_MODE=true

# 开发时启用热重载
RELOAD=true

# 开发时允许跨域调试
DEV_CORS_ENABLED=true

# =============================================================================
# 生产环境特定配置（取消注释以使用）
# =============================================================================
# DEBUG=false
# LOG_LEVEL=WARNING
# RELOAD=false
# DEV_CORS_ENABLED=false
#
# # 安全头配置
# SECURE_HEADERS=true
# HSTS_ENABLED=true
# CSP_ENABLED=true
#
# # 性能优化
# ENABLE_COMPRESSION=true
# ENABLE_CACHING=true
# CACHE_TTL=3600